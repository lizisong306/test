<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                />
        </shape>
    </item>
    <item
        android:bottom="-2px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>
            <stroke
                android:width="1px"
                android:color="#dddddd"  />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="337px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:orientation="vertical"
    android:background="#00000000"

    >
    <RelativeLayout
        android:id="@+id/lunbo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="337px"
            android:scaleType="fitXY"
            android:clickable="true"
            android:background="@mipmap/banner"
            />

        <!--<LinearLayout
            android:id="@+id/shows"
           android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:orientation="vertical"
            android:background="@mipmap/beijin">-->
        <RelativeLayout
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@mipmap/bn_img"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whrite"
                android:layout_marginLeft="23px"
                android:maxEms="19"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="dfdf"
                android:gravity="center_vertical"
                android:textSize="29px"
                />

        </RelativeLayout>


        <!--</LinearLayout>-->




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/tianqi"
        >
        <ImageView
            android:id="@+id/tianqi_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:clickable="true"
            android:background="@mipmap/yin_bg"
            />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tianqi_wendu"
               android:layout_marginTop="38dp"
               android:layout_marginLeft="40dp"
               android:text="-10"

               android:gravity="left"
               android:textColor="@color/white"
               android:textSize="50sp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:layout_toRightOf="@+id/tianqi_wendu"
               android:layout_marginTop="45dp"
               android:textSize="12sp"
               android:text="o"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height_wendu"
            android:text="-9"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tianqi_wendu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/height_wendu"
            android:layout_marginTop="45dp"
            android:textSize="9sp"
            android:text="o"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/low_wendu"
            android:text="98"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/height_wendu"
            android:layout_toRightOf="@+id/tianqi_wendu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/height_wendu"
            android:layout_toRightOf="@+id/height_wendu"
            android:layout_marginTop="2dp"
            android:textSize="9sp"
            android:text="o"/>

            <TextView
                android:id="@+id/tianqi_show"
                android:layout_below="@+id/tianqi_wendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:layout_marginTop="0dp"
                android:text="晴转多云"

                />
           <TextView
               android:id="@+id/tianqi_kongqi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/height_wendu"
               android:background="@mipmap/yuanjiaojuxing"
               android:layout_marginTop="55dp"
               android:layout_marginLeft="20dp"
               android:text=" 22 优"
               android:lines="1"
               android:singleLine="true"
               android:maxLength="4"
               android:ellipsize="end"
               android:textColor="@color/white"
               android:gravity="center"
               android:textSize="14sp"
               />

        <TextView
            android:id="@+id/tianqi_difang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tianqi_kongqi"
            android:layout_toRightOf="@+id/height_wendu"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:text="潍坊"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            />


        <ImageView
            android:id="@+id/tianqi_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/duoyun"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="50dp"
            />


        <RelativeLayout
            android:id="@+id/show_tianqi"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@mipmap/bn_img"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/tianqi_bg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/tianqi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whrite"
                android:layout_marginLeft="23px"
                android:maxEms="19"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="29px"
                />
        </RelativeLayout>


        <!--</LinearLayout>-->
       <ImageView
           android:id="@+id/localcity"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/localcity"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_alignParentRight="true"
           />



    </RelativeLayout>

</com.chenantao.autolayout.AutoLinearLayout>

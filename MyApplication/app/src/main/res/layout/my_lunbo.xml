<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_auto_baseheight="width"
    app:layout_auto_basewidth="height"
    android:background="@color/whrite"
    >
    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <RelativeLayout
        android:layout_below="@+id/tip"
        android:id="@+id/la"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:id="@+id/dingwei_id"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/miandiantoutiaoicon1"

            />
        <LinearLayout
            android:layout_below="@+id/dingwei_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/dingwei_lay"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tiplay"
                >
                <TextView
                    android:id="@+id/tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="13sp"
                    android:text="尊敬的"
                    />
                <TextView
                    android:id="@+id/tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffcb57"
                    android:textSize="13sp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:textSize="13sp"
                    android:text="，钛领云服务为您推荐31条资讯"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lines"
        />
</com.chenantao.autolayout.AutoLinearLayout>

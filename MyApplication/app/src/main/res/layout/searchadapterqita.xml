<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_ra"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#e1e1e1"
    android:clipToPadding="true">
    <!--头-->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/heart"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_head">
        <TextView
            android:id="@+id/type_name"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯"
            android:textSize="15sp"
            android:textColor="#3385FF"
            />
        <TextView
            android:id="@+id/count"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26条"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="#3385FF"
            />
    </LinearLayout>
    <!--尾-->
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@drawable/shape_mores">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多内容"
            android:textSize="15sp"
            android:textColor="#3385FF"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow"
            />
    </LinearLayout>
    <!--资讯-->
    <LinearLayout
        android:visibility="gone"
        android:background="@color/whrite"
        android:id="@+id/zx_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_below="@+id/xm_layout"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_marginBottom="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginRight="15px"
                android:id="@+id/zx_img"
                android:layout_width="100dp"
                android:layout_height="66.5dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/information_placeholder"/>

            <LinearLayout
                android:id="@+id/my_jianjie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView

                    android:id="@+id/zx_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ATT试用商用5G通信服务 英"
                    android:textSize="@dimen/biaoti1"
                    android:textColor="@color/title_head"
                    android:singleLine="false"
                    android:lines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="14px"/>
                <LinearLayout
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/zx_lanyuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="资讯"
                            android:textSize="11sp"
                            android:textColor="@color/title"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/zx_update"
                            android:layout_marginLeft="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2小时前"
                            android:textSize="11sp"
                            android:textColor="@color/title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right|center"

                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <RelativeLayout
                            android:layout_gravity="center"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/zixun_tuijian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/tuijian"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/zixue_zhiding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/zhiding"/>
                        </RelativeLayout>
                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/zx_zt"
                            android:layout_marginRight="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhuanti_img"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/zx_line_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/zan"
                                android:layout_marginRight="5px"/>
                            <TextView
                                android:id="@+id/zx_zan"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="999"
                                android:textSize="11sp"
                                android:textColor="@color/title"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:gravity="center"
                            >
                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/look"
                                android:layout_marginRight="5px"/>
                            <TextView

                                android:id="@+id/zx_look"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="999"
                                android:textSize="11sp"
                                android:textColor="@color/title"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--政策-->
    <LinearLayout
        android:background="@color/whrite"
        android:visibility="visible"
        android:id="@+id/zc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/zc_line"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/zc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATT试用商用5G通信服务 英"
                android:textColor="@color/title_head"
                android:textSize="@dimen/biaoti1"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title"
                    android:textColor="@color/title"
                    android:text="所属领域:"/>
                <TextView
                    android:id="@+id/zc_linyu"
                    android:layout_marginLeft="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title"
                    android:textColor="@color/title"
                    android:text="电子信息"/>
            </LinearLayout>
            <TextView
                android:id="@+id/zc_description"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/title"
                android:textColor="@color/title"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"/>
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:id="@+id/zc_lingyu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="政策"
                        android:textSize="11sp"
                        android:textColor="@color/title"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="right|center">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/zhengci_tuijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/tuijian"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/zhengci_zhiding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhiding"/>
                    </RelativeLayout>


                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/zc_zt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zhuanti_img"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/zc_zan"
                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:drawableLeft="@mipmap/zan"
                        android:textSize="11sp"
                        android:textColor="@color/title"
                        android:drawablePadding="5px"/>
                    <TextView

                        android:id="@+id/zc_look"
                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:drawableLeft="@mipmap/look"
                        android:textSize="11sp"
                        android:textColor="@color/title"
                        android:drawablePadding="5px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--人才-->
    <LinearLayout
        android:visibility="gone"
        android:background="@color/whrite"
        android:id="@+id/rc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/line"
        android:layout_toRightOf="@+id/zx_layout"
        android:layout_toEndOf="@+id/zx_layout">
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <view.RoundImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/rc_img"
                    />
                <LinearLayout
                    android:id="@+id/my_rencai"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/rc_uname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英特尔"
                            android:textSize="@dimen/biaoti1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:maxEms="8"
                            android:textColor="@color/title_head"/>
                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/rc_zhicheng"
                            android:layout_marginLeft="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="29px"
                            android:textColor="@color/title"/>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/rc_yuanshi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/yuanshi"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginTop="10px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rc_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title"
                            android:textColor="@color/title"
                            android:text="所属领域："
                            android:lines="1"/>
                        <TextView
                            android:id="@+id/rc_linyu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title"
                            android:textColor="@color/title"
                            android:text=""
                            android:lines="1"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="11dp"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:textSize="@dimen/title"
                    android:textColor="@color/title"
                    android:text="据报道，英特尔位于德州奥斯卡玎"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专家"
                    android:textSize="11sp"
                    android:textColor="@color/title"
                    />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right|center">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/rencai_tuijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/tuijian"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/rencai_zhiding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhiding"/>
                    </RelativeLayout>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/rc_zt"
                        android:layout_marginRight="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zhuanti_img"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/zan"
                        android:layout_marginRight="5px"/>

                    <TextView
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9999999999999"
                        android:id="@+id/rc_zan"
                        android:textSize="11sp"
                        android:textColor="@color/whrite"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/rc_shape"
                        />

                    <TextView

                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:id="@+id/rc_look"
                        android:drawableLeft="@mipmap/look"
                        android:textSize="11sp"
                        android:textColor="@color/title"
                        android:drawablePadding="5px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--项目-->
    <LinearLayout
        android:background="@color/whrite"
        android:id="@+id/xm_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/xiangmu"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginRight="10dp"
                    android:id="@+id/xm_img"
                    android:layout_width="85dp"
                    android:layout_height="56dp"
                    android:background="@mipmap/information_placeholder"
                    android:scaleType="centerCrop"/>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/xm_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ATT试用商用5G通信服务 英"
                        android:textSize="@dimen/biaoti1"
                        android:textColor="@color/title_head"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:lineSpacingExtra="14px"
                        />
                    <LinearLayout

                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所属领域:"
                            android:textSize="@dimen/title"
                            android:textColor="@color/title"/>
                        <TextView
                            android:id="@+id/xm_linyu"
                            android:layout_marginLeft="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title"
                            android:textColor="@color/title"
                            android:text=""/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/xm_description"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/title"
                android:textColor="@color/title"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"/>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/xm_name"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目"
                    android:textSize="11sp"
                    android:textColor="@color/title"
                    />
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="right|center">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/xiangmu_tuijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/tuijian"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/xiangmu_zhiding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhiding"/>
                    </RelativeLayout>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/xm_zt"
                        android:layout_marginRight="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zhuanti_img"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/xm_dianwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999999"
                        android:textSize="11sp"
                        android:textColor="@color/whrite"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/rc_shape"/>
                    <TextView

                        android:id="@+id/xm_look"
                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:drawableLeft="@mipmap/look"
                        android:textSize="11sp"
                        android:textColor="@color/title"
                        android:drawablePadding="5px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_hui"
        />
</com.chenantao.autolayout.AutoLinearLayout>
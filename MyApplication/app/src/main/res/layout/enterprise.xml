<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#f6f6f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/whrite"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/enterprise_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业信息"
            android:layout_centerInParent="true"
            android:textColor="@color/title_head"
            android:textSize="@dimen/biaoti"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_marginTop="19px"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"/>
            <LinearLayout
                android:id="@+id/qiye_icon"
                android:layout_width="match_parent"
                android:layout_height="158px"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业图标"
                    android:layout_weight="1"
                    android:layout_marginLeft="26px"
                    android:textColor="#494949"
                    android:textSize="26px"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="77dp"
                        android:clickable="true"
                        android:layout_height="wrap_content"
                        android:padding="2dip"
                        >
                        <view.RoundImageView
                            android:padding="2dip"
                            android:id="@+id/icon"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"

                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="19px"
                        android:src="@mipmap/safari_back"

                        />
                </LinearLayout>

            </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal"
                android:gravity="left|center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/whrite">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业名称"
                    android:textColor="#494949"
                    android:textSize="26px"
                    android:layout_marginLeft="26px"
                    />
                <EditText
                    android:id="@+id/comp_name"
                    android:layout_marginRight="19px"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="26px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/title"
                    android:layout_marginLeft="26px"

                    />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#dddddd"/>
            <TextView
                android:layout_marginTop="19px"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#dddddd"/>

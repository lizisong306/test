<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_ra"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#f6f6f6"
    android:clipToPadding="true">
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"
        />
    <RelativeLayout
        android:id="@+id/heart"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/whrite"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/deli_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专利申请"
            android:layout_centerInParent="true"
            android:textColor="@color/title_head"
            android:textSize="@dimen/biaoti"/>
        <ImageView
            android:id="@+id/share"
            android:visibility="visible"
            android:layout_marginRight="19px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/need_add"

            />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/heart"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"
        />
    <view.RefreshListView
        android:layout_below="@+id/line"
        android:layout_above="@+id/bottmon_title"
        android:id="@+id/listview"
        style="@style/listview_style"
        android:background="#f6f6f6"
        addHeader="true"
        android:fadingEdge="none"
        android:overScrollMode="never"
        />
    <TextView
        android:id="@+id/bottmon_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/animation_list" />
    <LinearLayout
        android:id="@+id/welcome"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/line"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/qingbao"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/queshengye_qingbao"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您还没有申请专利服务"
            android:textColor="#3e3e3e"
            android:gravity="center"
            android:textSize="15sp"
            />

    </LinearLayout>
</com.chenantao.autolayout.AutoRelativeLayout>
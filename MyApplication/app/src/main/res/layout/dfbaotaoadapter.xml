<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#F6F6F6"
    android:orientation="vertical">
    <!-- 头条滚动-->
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/tianxuqiu"
        android:background="@color/white"
        >
        <view.ScrollBanner
            android:layout_marginTop="10dp"
            android:id="@+id/sb_demographic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lines"
            />
    </LinearLayout>
    <!--三图服务-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/santuu"
        android:background="@color/white"
        android:visibility="gone"
        >

        <!--3-->
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/san"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="105px">
                   <ImageView
                       android:id="@+id/tupian1yin"
                       android:layout_width="match_parent"
                       android:layout_height="105px"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/changfangxing"
                       />

                   <view.ZQImageViewRoundOval
                       android:id="@+id/tupian1"
                       android:layout_width="match_parent"
                       android:layout_marginTop="2px"
                       android:layout_marginLeft="2px"
                       android:layout_marginRight="2px"
                       android:layout_height="103px"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/tupian1"
                       />
               </RelativeLayout>
              <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="105px">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="105px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/changfangxing"
                        />
                   <view.ZQImageViewRoundOval
                    android:id="@+id/tupian2"
                    android:layout_marginTop="2px"
                    android:layout_marginLeft="2px"
                    android:layout_marginRight="2px"
                    android:layout_height="103px"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/tupian2"
                    />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3.7"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/changfangxing"
                        />
                    <view.ZQImageViewRoundOval
                        android:id="@+id/tupian3"
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/tupian3"
                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
         <!--2-->
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:id="@+id/er"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
          <view.ZQImageViewRoundOval
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="121dp"
              android:scaleType="centerCrop"
              android:id="@+id/er1"
              android:layout_marginRight="5dp"
              android:src="@mipmap/zhuanjias"
              />

            <view.ZQImageViewRoundOval
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/er2"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/zhuanjias"
                />

        </LinearLayout>
        <!--1-->
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/yi"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <view.ZQImageViewRoundOval
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:id="@+id/yi1"
                android:src="@mipmap/zhuanjias"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lines"
            />

    </LinearLayout>
    <!--精品项目-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:id="@+id/jingping"
        android:background="@color/white"
        android:layout_below="@+id/tianxuqiu"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/xiangmu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/xiangmu"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:textColor="#788bff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="精品项目"
                />
            <TextView
                android:id="@+id/hangye_more"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#3e3e3e"
                android:gravity="center"
                android:textSize="12sp"
                android:text="查看更多"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewPagerContainer"
            android:layout_width="match_parent"
            android:layout_height="422px"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="6dp"
            android:clipChildren="false"
            android:gravity="center"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:clipChildren="false"
                android:overScrollMode="never"
                >
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
    </LinearLayout>
    <!--包头设备-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/baotou"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:layout_below="@+id/tianxuqiu"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/baotou_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/shebei"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:textColor="#f2a17e"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="包头设备"
                />
            <TextView
                android:id="@+id/baotou_more"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#3e3e3e"
                android:gravity="center"
                android:textSize="12sp"
                android:text="查看更多"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:id="@+id/baotouContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="6dp"
            android:clipChildren="false"
            android:gravity="center"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/baotouviewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:overScrollMode="never"
                android:clipChildren="false"
                >
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />

    </LinearLayout>
    <!--专利推荐-->
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/zhuanli"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zhuanli_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_zhuanlituijian"
                android:drawablePadding="5dp"
                android:textColor="#181818"
                android:textSize="15sp"
                android:text="专利推荐"
                />
            <TextView
                android:id="@+id/zhuanli_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_gengxiin"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:textColor="#3e3e3e"
                android:textSize="12sp"
                android:text="换一批"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:id="@+id/zhuanli_lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/zhuanli_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATT试用商用5G通信服务 英"
                android:textSize="14sp"
                android:textColor="#181818"
                android:singleLine="false"
                android:lines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="14px"/>
            <TextView
                android:layout_below="@+id/zhuanli_title1"
                android:gravity="bottom"
                android:id="@+id/zhuanli_lingyu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属领域:化工"
                android:textSize="11sp"
                android:textColor="#4d4d4d" />

        </RelativeLayout>
        <TextView
            android:id="@+id/zhuanli_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:id="@+id/zhuanli_lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/zhuanli_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATT试用商用5G通信服务 英"
                android:textSize="14sp"
                android:textColor="#181818"
                android:singleLine="false"
                android:lines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="14px"/>
            <TextView
                android:layout_below="@+id/zhuanli_title2"
                android:gravity="bottom"
                android:id="@+id/zhuanli_lingyu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属领域:化工"
                android:textSize="11sp"
                android:textColor="#4d4d4d" />

        </RelativeLayout>
        <TextView
            android:id="@+id/zhuanli_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:id="@+id/zhuanli_lay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/zhuanli_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATT试用商用5G通信服务 英"
                android:textSize="14sp"
                android:textColor="#181818"
                android:singleLine="false"
                android:lines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="14px"/>
            <TextView
                android:layout_below="@+id/zhuanli_title3"
                android:gravity="bottom"
                android:id="@+id/zhuanli_lingyu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属领域:化工"
                android:textSize="11sp"
                android:textColor="#4d4d4d" />

        </RelativeLayout>
        <TextView
            android:id="@+id/zhuanli_line3"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:id="@+id/zhuanli_lay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/zhuanli_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATT试用商用5G通信服务 英"
                android:textSize="14sp"
                android:textColor="#181818"
                android:singleLine="false"
                android:lines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="14px"/>
            <TextView
                android:layout_below="@+id/zhuanli_title4"
                android:gravity="bottom"
                android:id="@+id/zhuanli_lingyu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属领域:化工"
                android:textSize="11sp"
                android:textColor="#4d4d4d" />

        </RelativeLayout>
        <TextView
            android:id="@+id/zhuanli_line4"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <TextView
            android:id="@+id/zhuanli_more"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="查看更多"
            android:gravity="center"
            android:textColor="#181818"
            />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/lines"
            android:layout_height="0.5px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f6f6f6"
            />
    </LinearLayout>



</com.chenantao.autolayout.AutoRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:clipToPadding="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title_lay"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <TextView
            android:layout_below="@+id/line1"
            android:id="@+id/jianxi"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#f6f6f6"
            />
        <RelativeLayout
            android:layout_below="@+id/jianxi"
            android:id="@+id/biaoti_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tubiao"
                android:layout_centerVertical="true"
                android:layout_width="8dp"
                android:layout_height="17dp"
                android:background="#797fec"
                />
            <TextView
                android:id="@+id/biaoti"
                android:layout_toRightOf="@+id/tubiao"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textColor="#797fec"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="机构专家"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/more_info"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多  "
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/icon_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_below="@+id/biaoti_lay"
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lines"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/xiangmu_lay"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/xiangmu_lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/xianmgmu1"
                android:layout_width="100dp"
                android:layout_height="66.5dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/information_placeholder"/>


            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/xianmgmu1"
                android:id="@+id/xmtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATT试用商用5G通信服务 英"
                android:textSize="14sp"
                android:textColor="#181818"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="14px"/>

            <TextView
                android:layout_alignBottom="@+id/xianmgmu1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/xianmgmu1"
                android:layout_below="@+id/xmtitle1"
                android:gravity="bottom"
                android:id="@+id/lanyuan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属领域:化工"
                android:textSize="11sp"
                android:textColor="#4d4d4d" />
            <TextView
                android:layout_alignBottom="@+id/xianmgmu1"
                android:id="@+id/source1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="国家科学基金"
                android:gravity="center"
                android:textSize="9sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#ffffff"
                android:background="@drawable/shape_draw_guojiakexuejijin"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/noxiangmu"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/noxiangmu"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rencai_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rencai_lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <view.RoundImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/rencai_img1"
                android:src="@mipmap/touxiangzhanwei"
                android:background="@mipmap/touxiangzhanwei"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rencai_img1"
                android:id="@+id/rencai_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="谢霆锋"
                android:layout_toLeftOf="@+id/rank1"
                android:textSize="14sp"
                android:textColor="#181818"
                android:singleLine="false"
                android:lines="1"
                android:ellipsize="marquee"
                />

            <TextView
                android:layout_alignBottom="@+id/rencai_img1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rencai_img1"
                android:layout_below="@+id/rencai_title1"
                android:id="@+id/rencai_lingyu1"
                android:gravity="bottom"
                android:layout_toLeftOf="@+id/rank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属领域:化工"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textSize="11sp"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/rank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家"
                android:textSize="13sp"
                android:textColor="#3e3e3e"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/norencai"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/norencai"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/line"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lines"
        />

    <!--底线-->
    <RelativeLayout
        android:id="@+id/dixian"
        android:visibility="gone"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:background="#f6f6f6"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:layout_width="80dp"
                android:layout_height="1px"
                android:background="@color/lines"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777777"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="我是有底线的"
                android:textSize="12sp"
                />
            <TextView android:layout_width="80dp"
                android:layout_height="1px"
                android:background="@color/lines"
                />
        </LinearLayout>
    </RelativeLayout>


</com.chenantao.autolayout.AutoRelativeLayout>
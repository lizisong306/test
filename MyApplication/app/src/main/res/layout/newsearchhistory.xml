<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
     android:layout_below="@+id/top"
     android:id="@+id/title"
     android:layout_width="match_parent"
     android:layout_height="55dp"
     android:background="@mipmap/newsearchbg1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text=""
                    android:maxLength="15"
                    android:id="@+id/edit"
                    android:drawableLeft="@mipmap/serarchnew"
                    android:focusable="true"
                    android:hint=" 请输入搜索内容..."
                    android:paddingLeft="8dp"
                    android:drawablePadding="15dp"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:imeOptions="actionSearch"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_round_wite1"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/line_hui"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/closesousuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close_sousuo"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="取消"
                android:id="@+id/cencel"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15sp"

                />
        </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"
        android:visibility="gone"
        />
    </RelativeLayout>
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@mipmap/newsearchbg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/bottmon_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/contentlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/bottmon_title"
        android:layout_below="@+id/title"
        >
        <RelativeLayout
            android:id="@+id/titlehistroy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:text="搜索历史"
                android:drawableLeft="@mipmap/lishijilu"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#6273ef"
                />
            <ImageView
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:id="@+id/close"
                android:src="@mipmap/clost"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/titlehistroyline"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <view.AutoLinefeedLayout
            android:layout_marginTop="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/contentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          >
        </view.AutoLinefeedLayout>


        <TextView
            android:id="@+id/hottitle"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="8dp"
            android:text="热门话题"
            android:drawableLeft="@mipmap/hotreci"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#ff5544"
            />
        <TextView
            android:id="@+id/hotline"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <view.AutoLinefeedLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hotView"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          >
        </view.AutoLinefeedLayout>

    </LinearLayout>
    <ListView
        android:layout_below="@+id/title"
        android:layout_above="@+id/bottmon_title"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fadingEdge="none"
        android:divider="#ffffff"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:dividerHeight="@dimen/list_diver_height"
        android:overScrollMode="never"
        android:scrollbars="none"
        />

</com.chenantao.autolayout.AutoRelativeLayout>
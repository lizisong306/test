<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#EEEEEE"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:background="@mipmap/bg_dianzixinxi"
        >
        <ImageView
            android:id="@+id/bamai_back"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:layout_marginLeft="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择行业"
            android:layout_marginTop="10px"
            android:textSize="@dimen/biaoti"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="全选"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginRight="24px"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电子信息"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        />

    <ListView
       android:layout_below="@+id/title"
        android:layout_above="@+id/bottom_layout"
        android:layout_weight="10"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        android:id="@+id/bamai_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#EEEEEE"
        android:cacheColorHint="#00000000"
        android:listSelector= "#00000000"
        android:scrollingCache="true"
        android:animationCache="true"
        android:alwaysDrawnWithCache="true"
        android:layout_marginBottom="30dp"
        android:dividerHeight="1px"
        android:focusable="true"
        >
    </ListView>
<LinearLayout
    android:id="@+id/bottom_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/text_show"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/lansecolor"
        android:textSize="35px"
        android:layout_marginRight="20dp"
        android:text="15/20"
        android:gravity="right"
        />
    <view.HorizontalListView android:id="@+id/horlist"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#EEEEEE"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        >

    </view.HorizontalListView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/goback"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="30px"
            android:layout_height="90px"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/pop_bg_back"
            android:text="返回"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/tab_close"
            />

        <Button
            android:id="@+id/bamai_next_two"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="90px"
            android:text="下一步"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="30px"
            android:background="@mipmap/pop_bg_next"
            ></Button>

    </RelativeLayout>


</LinearLayout>


</com.chenantao.autolayout.AutoRelativeLayout>

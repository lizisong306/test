<?xml version="1.0" encoding="utf-8"?>
<view.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/custom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:clipToPadding="true"
    >
    <RelativeLayout
        android:layout_below="@+id/top"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/newsearchbg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:text=""
                        android:maxLength="15"
                        android:id="@+id/edit"
                        android:drawableLeft="@mipmap/serarchnew"
                        android:focusable="true"
                        android:hint=" 请输入搜索内容..."
                        android:paddingLeft="8dp"
                        android:drawablePadding="15dp"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:imeOptions="actionSearch"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_round_wite1"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="@color/line_hui"
                        android:textSize="13sp"/>
                    <ImageView
                        android:id="@+id/closesousuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/close_sousuo"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/cencel"
                    android:text="取消"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"

                    />
            </LinearLayout>
            <view.HorizontalListView
                android:id="@+id/horlist"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                >
            </view.HorizontalListView>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@mipmap/newsearchbg"
        />
    <TextView
        android:id="@+id/bottmon_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        />
    <view.RefreshListView
        android:id="@+id/listview"
        style="@style/listview_style"
        android:layout_below="@+id/title"
        android:layout_above="@+id/bottmon_title"
        addHeader="true"
        android:fadingEdge="none"
        android:background="#f6f6f6"
        android:overScrollMode="never"
        android:scrollbars="none"
        />
    <ListView
        android:layout_below="@+id/title"
        android:layout_above="@+id/bottmon_title"
        android:id="@+id/listguanxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fadingEdge="none"
        android:divider="#ffffff"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:dividerHeight="@dimen/list_diver_height"
        android:overScrollMode="never"
        android:scrollbars="none"
        />
    <ImageView
        android:layout_marginTop="-1dp"
        android:layout_below="@+id/title"
        android:layout_width="2048dp"
        android:layout_height="8dp"
        android:background="@drawable/img1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/nodate"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/nodateshuju"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="石墨"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#4d4d4d"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:text="将您的需求提交给钛领，享受更全面的专属科技服务！"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:id="@+id/commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交需求"
                    android:layout_centerInParent="true"
                    android:paddingRight="20dp"
                    android:paddingLeft="14dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:background="@mipmap/yuanjiaojuxingdd"
                    />
                <ImageView
                    android:layout_marginLeft="94dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrowring"
                    />

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/hottitle"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="8dp"
            android:text="相关热搜"
            android:drawableLeft="@mipmap/hotreci"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#ff5544"
            />
        <TextView
            android:id="@+id/hotline"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <view.AutoLinefeedLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hotView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </view.AutoLinefeedLayout>
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/animation_list" />
</view.CustomLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/banner_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/newrencaibanner"
        android:layout_marginBottom="12dp"
        />
    <ImageView
        android:id="@+id/back"
        android:background="@mipmap/back_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        />
    <ImageView
        android:id="@+id/share"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@mipmap/share_white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="63dp"
        >
        <view.RoundImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/rc_img"
            android:scaleType="centerCrop"
            android:src="@mipmap/bigrencaibg"
            />
        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="聂毅"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/biaoqian"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:background="#3ccaa3"
        android:layout_alignParentBottom="true"
        android:text="专家"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textStyle="bold"
        />
</com.chenantao.autolayout.AutoRelativeLayout>
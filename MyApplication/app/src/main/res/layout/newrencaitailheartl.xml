<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="338dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_h"
        android:orientation="vertical"
        android:id="@+id/hearttab"
        android:visibility="visible"
        android:layout_marginTop="-30dp"
        android:layout_below="@+id/top"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/heart1"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heartitem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#33afb6"
                    />
                <TextView
                    android:id="@+id/heartitemline1"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:layout_below="@+id/heartitem1"
                    android:layout_width="33dp"
                    android:layout_height="2dp"
                    android:background="#33afb6"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/heart2"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heartitem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="履历"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#727272"
                    />
                <TextView
                    android:id="@+id/heartitemline2"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/heartitem2"
                    android:layout_width="33dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="2dp"
                    android:background="#33afb6"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/heart3"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heartitem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成果"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#727272"
                    />
                <TextView
                    android:id="@+id/heartitemline3"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/heartitem3"
                    android:layout_width="33dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="2dp"
                    android:background="#33afb6"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/heart4"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heartitem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#727272"
                    />
                <TextView
                    android:id="@+id/heartitemline4"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/heartitem4"
                    android:layout_width="33dp"
                    android:layout_height="2dp"
                    android:background="#33afb6"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/heart5"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/heartitem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#727272"
                    />
                <TextView
                    android:id="@+id/heartitemline5"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/heartitem5"
                    android:layout_width="33dp"
                    android:layout_height="2dp"
                    android:background="#33afb6"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f6f6f6"/>
    <LinearLayout
        android:id="@+id/linetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/senddata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/time"
            android:drawablePadding="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="left|center_vertical"
            android:textColor="#696969"
            android:textSize="12sp"
            android:text="发布时间:2017-05-08"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/xuqiutype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="right|center_vertical"
            android:textSize="12sp"
            android:text="需求类型:不限"
            android:textColor="#181818"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/head_hide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lines"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/content"
        android:visibility="gone"
        android:background="#ffffff"
        android:gravity="center"
        >
        <RelativeLayout
            android:id="@+id/img"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/img_lay"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/xm_img"
                    android:layout_width="85dp"
                    android:layout_height="57dp"
                    android:background="@mipmap/information_placeholder"
                    android:scaleType="fitXY"/>
                <view.RoundImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/rc_img"
                    android:visibility="visible"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/title_lay"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_lay"
                android:layout_alignTop="@+id/img_lay"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/xm_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATT试用商用"
                    android:textSize="15sp"
                    android:textColor="@color/title_head"
                    android:singleLine="false"
                    android:lines="2"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6px"
                    />
                <TextView
                    android:id="@+id/xm_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/title"
                    android:textColor="@color/title_head"
                    android:singleLine="false"
                    android:maxLines="1"
                    android:ellipsize="end"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_alignBottom="@+id/img_lay"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属领域:"
                    android:textSize="@dimen/title"
                    android:textColor="@color/text_gray"/>
                <TextView
                    android:id="@+id/xm_linyu"
                    android:layout_marginLeft="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title"
                    android:textColor="@color/text_gray"
                    android:text=""/>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/xm_description"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/title"
        android:textColor="@color/title"
        android:lineSpacingExtra="6dp"/>
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:background="@drawable/shape"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/pluse_dianzixinxi"
        />
    <LinearLayout
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_black"
            android:text="电子领域"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="人间的房间啊时间附近发生发放积分人间的房间啊时间附近发生发放积分人间的房间啊时间附近发生发放积分"
            android:gravity="center"
            android:ellipsize="end"
            android:textColor="@color/text_gray"
            android:lines="2"
            android:id="@+id/title_info"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_info"
        android:layout_centerHorizontal="true"

        android:background="@mipmap/arrow_up"
        />
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arrow"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"

        android:layout_marginTop="0dp"

        >
        <TextView
           android:id="@+id/data"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="更新日期 : 2016-12-30  "
            android:gravity="center"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/delete_icon"
            android:textColor="@color/text_gray"
        />

        <ImageView
            android:id="@+id/delete"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@mipmap/delete_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

</com.chenantao.autolayout.AutoRelativeLayout>
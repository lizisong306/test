<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
       android:id="@+id/heart"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scaleType="centerCrop"
       android:src="@mipmap/webtab"
       />
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back_h"
        />
    <WebView
        android:id="@+id/wbviw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heart"
        android:layout_above="@+id/bottom"
        android:layout_marginBottom="5dp"
        >
    </WebView>



    <TextView
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/jinbianse"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="申请加入"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        />
</com.chenantao.autolayout.AutoRelativeLayout>
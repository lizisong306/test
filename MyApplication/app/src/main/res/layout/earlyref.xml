<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_ra"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:clipToPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whrite"
        android:gravity="center"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/wbviw"
                android:layout_width="match_parent"

                android:layout_height="match_parent"></WebView>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/animation_list" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:gravity="center">


        <LinearLayout
            android:visibility="visible"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_marginLeft="38px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/zixun_back_details"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24px"
            android:layout_gravity="center_vertical" >
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/guanzhu"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/check_guanzhu"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@mipmap/zixun_like"
                    />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/shoucan"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/my_collect"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@mipmap/zixun_collect"
                    />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/dianzan"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shares"
                    android:button="@null"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:background="@mipmap/zixun_share"

                    />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</com.chenantao.autolayout.AutoLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:background="@drawable/shape"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:id="@+id/pulse_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pulse_icon"
            />
        <TextView
            android:layout_marginTop="-30dp"
            android:layout_below="@+id/pulse_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按需定制\n开启专属商机空间"
            android:gravity="center"
            android:lineSpacingExtra="14px"
            android:textColor="@color/title"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/bottmon"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="开始把脉"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/shape_yorrow"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />


</com.chenantao.autolayout.AutoRelativeLayout>
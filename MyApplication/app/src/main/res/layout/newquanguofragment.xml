<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:clipToPadding="true"
    android:orientation="vertical">
    <view.RefreshListView
        android:id="@+id/listview"
        style="@style/listview_style"
        addHeader="true"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none"
        />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/animation_list" />
    <LinearLayout
        android:id="@+id/title"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:src="@mipmap/quanguos"
                android:scaleType="centerCrop"
                android:gravity="center"
                android:id="@+id/nice_spinner1" />
            <RelativeLayout
                android:id="@+id/search_lay"
                android:visibility="visible"
                android:layout_width="141dp"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/jia"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shap_round_xx">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="#b7b7b7"
                    android:textSize="11sp"
                    android:text="搜索"
                    android:drawableLeft="@mipmap/sousuo_new"
                    />
            </RelativeLayout>
            <ImageView
                android:visibility="visible"
                android:id="@+id/jia"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jiahao"
                />
        </RelativeLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/lay_yin"
        android:layout_below="@+id/title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/img"
        />
    <ImageView
        android:id="@+id/nodata"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/firstnodata"
        android:layout_centerInParent="true"
        />
</com.chenantao.autolayout.AutoRelativeLayout>
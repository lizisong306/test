<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:id="@+id/xiangmu_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/xianmgmu"
            android:layout_width="100dp"
            android:layout_marginRight="5dp"
            android:layout_height="66.5dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/information_placeholder"/>
        <view.CustomTextView
            android:layout_toRightOf="@+id/xianmgmu"
            android:id="@+id/xmtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATT试用商用5G通信服务 英"
            customtxv.textSize="15sp"
            customtxv.textColor="@color/title_head"
            android:textSize="15sp"
            android:textColor="#181818"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="14px"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_alignBottom="@+id/xianmgmu"
            android:layout_toRightOf="@+id/xianmgmu"
            android:layout_below="@+id/xmtitle"
            android:gravity="bottom"
            android:id="@+id/lanyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属领域:化工"
            android:ellipsize="end"
            android:textSize="11sp"
            android:textColor="#4d4d4d" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_alignBottom="@+id/lanyuan"
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:gravity="center"
            android:textSize="9sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="#ffffff"
            android:background="@drawable/shape_draw_guojiakexuejijin"
            />

    </RelativeLayout>
    <!--底线-->
    <RelativeLayout
        android:id="@+id/dixian"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#f6f6f6"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:layout_width="80dp"
                android:layout_height="1px"
                android:background="@color/lines"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777777"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:text="我是有底线的"
                android:textSize="12sp"
                />
            <TextView android:layout_width="80dp"
                android:layout_height="1px"
                android:background="@color/lines"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/xiangmuline"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lines"
        />

</com.chenantao.autolayout.AutoRelativeLayout>
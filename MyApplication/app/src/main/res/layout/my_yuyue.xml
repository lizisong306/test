<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:background="#F6F6F6">

    <!--人才-->
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15px"
        android:id="@+id/rencai"
        android:background="@color/whrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rencai_icon"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_width="65dp"
                android:layout_height="70dp"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26px"
                        android:textColor="@color/title_head"
                        android:text="姓名："/>
                    <TextView
                        android:id="@+id/rencai_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26px"
                        android:lines="1"
                        android:textColor="@color/title_head"
                        android:text="马云"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23px"
                        android:textColor="@color/title"
                        android:text="职称："/>
                    <TextView
                        android:id="@+id/rencai_zhicheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23px"
                        android:lines="1"
                        android:textColor="@color/title"
                        android:text="阿里巴巴集团"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/yanjiulingyu"
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23px"
                        android:textColor="@color/title"
                        android:text="研究领域："/>
                    <TextView
                        android:id="@+id/lingye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="23px"
                        android:lines="1"
                        android:textColor="@color/title"
                        android:text="中国国际电子商务"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15px"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="约见时间："/>
                <TextView
                    android:id="@+id/rencai_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="2016-12-28"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="约见地点："/>
                <TextView
                    android:id="@+id/rencai_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="北京市海淀区中关村大街"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="约见主题："/>
                <TextView
                    android:id="@+id/rencai_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="商议合作项目"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="提交时间："/>
                <TextView
                    android:id="@+id/rencai_updata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="2016-12-30"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout
           android:layout_marginTop="15px"
            android:layout_marginRight="15px"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
            android:id="@+id/rencai_remind"
            android:layout_width="200px"
            android:layout_height="80px"
            android:background="@mipmap/tixin_btn"
            android:text="提醒客服"
            android:textSize="28px"
            android:textColor="@color/lansecolor"/>
            <Button
                android:id="@+id/rencai_cencel"
                android:layout_marginLeft="25px"
                android:layout_width="200px"
                android:layout_height="80px"
                android:background="@mipmap/dismis_btn"
                android:text="取消预约"
                android:textSize="28px"
                android:textColor="#FF7F7F"/>
        </LinearLayout>
    </LinearLayout>
    <!--项目 设备  实验室 -->
    <LinearLayout
        android:layout_marginTop="15px"
        android:visibility="gone"
        android:id="@+id/qita"
        android:gravity="center_vertical"
        android:background="@color/whrite"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15px"
                android:id="@+id/qita_title"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:lineSpacingExtra="12px"
                android:textSize="26px"
                android:lines="1"
                android:textColor="@color/title_head"
                android:text="贴片机：又称“贴装机”、“表面贴装系统”(Surface Mount System)"
                />
        <LinearLayout
            android:id="@+id/qita_model"
            android:gravity="center_vertical"
            android:layout_marginTop="15px"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/model_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="型       号："/>
                <TextView
                    android:id="@+id/qita_modelinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="2016-12-28"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="联  系  人："/>
                <TextView
                    android:id="@+id/qita_lianxiren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="张三"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="联系电话："/>
                <TextView
                    android:id="@+id/qita_lianxidianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="1883138888"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="备        注："/>
                <TextView
                    android:id="@+id/qita_postdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="商议合作项目"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/qita_time"
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/qita_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:textColor="@color/title"
                    android:text="提交时间："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23px"
                    android:lines="1"
                    android:textColor="@color/title"
                    android:text="2016-12-30"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="15px"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout
            android:layout_marginTop="15px"
            android:layout_marginRight="15px"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/qita_remind"
                android:layout_width="200px"
                android:layout_height="80px"
                android:background="@mipmap/tixin_btn"
                android:text="提醒客服"
                android:textSize="28px"
                android:textColor="@color/lansecolor"/>
            <Button
                android:id="@+id/qita_cencel"
                android:layout_marginLeft="25px"
                android:layout_width="200px"
                android:layout_height="80px"
                android:background="@mipmap/dismis_btn"
                android:text="取消预约"
                android:textSize="28px"
                android:textColor="#FF7F7F"/>
        </LinearLayout>
    </LinearLayout>

</com.chenantao.autolayout.AutoLinearLayout>

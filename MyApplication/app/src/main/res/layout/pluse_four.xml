<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:background="@mipmap/bg_dianzixinxi"
        >
        <ImageView
            android:id="@+id/bamai_back"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:layout_marginLeft="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="确认行业和主题"
            android:textSize="@dimen/biaoti"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </RelativeLayout>

    <view.RefreshListView
        android:id="@+id/listview"
        style="@style/listview_style"
        android:layout_marginTop="100px"
        android:layout_above="@+id/bottmon"
        addHeader="true"
        android:dividerHeight="0px"
        />

    <RelativeLayout
        android:id="@+id/bottmon"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/goback"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="30px"
            android:layout_height="90px"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/pop_bg_back"
            android:text="返回"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/tab_button_close"
            />

        <Button
            android:id="@+id/bamai_next_two"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="90px"
            android:text="生成"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="30px"
            android:background="@mipmap/pop_bg_next"
            ></Button>
    </RelativeLayout>

    </com.chenantao.autolayout.AutoRelativeLayout>
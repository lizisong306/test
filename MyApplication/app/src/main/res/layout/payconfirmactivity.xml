<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:background="#f6f6f6"
    android:clipToPadding="true">
    <LinearLayout
        android:id="@+id/line"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/whrite"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/login_backs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认支付"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/biaoti"/>
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#eaeaea"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付￥10000.00"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:textSize="18sp"
            android:textColor="#181818"
            />
          <TextView
              android:id="@+id/fenge"
              android:layout_toRightOf="@+id/pay_money"
              android:layout_width="1dp"
              android:layout_height="35dp"
              android:layout_marginLeft="5dp"
              android:background="@color/lines"
              android:layout_centerVertical="true"
              />
        <TextView
            android:id="@+id/youhui"
            android:layout_toRightOf="@+id/fenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠￥0.00"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            />
        <TextView
            android:id="@+id/pay_confirm"
            android:layout_toRightOf="@+id/youhui"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="支付"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@color/lansecolor"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dingdan"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="1dp"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:id="@+id/xm_img"
                    android:layout_width="85dp"
                    android:layout_height="56dp"
                    android:background="@mipmap/information_placeholder"
                    android:scaleType="fitXY"/>


                <view.RoundImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/rc_img"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/xm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATT试用商用"
                        android:textSize="@dimen/biaoti"
                        android:textColor="@color/title_head"
                        android:singleLine="false"
                        android:maxLines="2"
                        android:ellipsize="marquee"
                        android:lineSpacingExtra="14px"
                        />
                    <TextView
                        android:id="@+id/xm_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/title"
                        android:textColor="@color/title_head"
                        android:singleLine="false"
                        android:maxLines="1"
                        android:ellipsize="marquee"

                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属领域:"
                        android:textSize="@dimen/title"
                        android:textColor="@color/text_gray"/>
                    <TextView
                        android:id="@+id/xm_linyu"
                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title"
                        android:textColor="@color/text_gray"
                        android:text=""/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="联系人"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="14dp"
                 android:textSize="15sp"
                 android:textColor="#181818"
                 />

            <TextView
                android:id="@+id/connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菲尔普斯"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:textColor="#181818"
                />

            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13552226243"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约见时间"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:textColor="#181818"
                />

            <TextView
                android:id="@+id/meettime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-28 10:30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            >
            <TextView
                android:id="@+id/adresstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约见地点"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:textColor="#181818"
                />

            <TextView
                android:id="@+id/adress"
                android:layout_toRightOf="@+id/adresstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国技术科学院  "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textSize="14sp"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_gray"
                android:drawableRight="@mipmap/dibiaos"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dingdan"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#f6f6f6"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:id="@+id/youhuijuanlay"
            android:background="@color/white"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:textColor="#181818"
                />

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/youhuijuan_count"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:background="@drawable/shape_yuan"
                    />
                <TextView
                    android:layout_toRightOf="@+id/youhuijuan_count"
                    android:id="@+id/youhuijuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="无可用 "
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:drawableRight="@mipmap/safari_back"
                    />
            </RelativeLayout>


        </RelativeLayout>
        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约服务费"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:textColor="#181818"
                />

            <TextView
                android:id="@+id/yuan_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000.00  "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:textSize="14sp"
                android:textColor="@color/lansecolor"

                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
    </LinearLayout>

</com.chenantao.autolayout.AutoRelativeLayout>
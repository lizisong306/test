<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#f6f6f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/whrite"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/mydata_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_centerInParent="true"
            android:textColor="@color/title_head"
            android:textSize="@dimen/biaoti"/>
        <TextView
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:layout_marginLeft="29px"
            android:drawableLeft="@mipmap/touxiang"
            android:drawablePadding="17dp"
            />
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">


            <RelativeLayout
                android:layout_width="77dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:padding="2dip"
                >
                <view.RoundImageView2

                    android:id="@+id/person_tx"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/touxiangzhanwei"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:src="@mipmap/safari_back"

                android:id="@+id/imageView4" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
        android:id="@+id/info_name"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:background="@drawable/ll_sign_select">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:layout_marginLeft="29px"
            android:drawableLeft="@mipmap/name"
            android:drawablePadding="17dp"
            />

        <TextView
            android:id="@+id/person_name"
            android:layout_marginRight="30px"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#666666"
            android:layout_marginLeft="30px"
            android:background="@null"

            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:src="@mipmap/safari_back"
            />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="19px"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>

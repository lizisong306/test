    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/whrite">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textColor="#494949"
            android:textSize="15sp"
            android:layout_marginLeft="26px"
            />
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/city"
                android:layout_marginRight="19px"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="明明"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/title"
                android:layout_marginLeft="26px"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19px"
                android:src="@mipmap/safari_back"

                />
        </LinearLayout>

    </LinearLayout>
    <TextView

        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/whrite">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领域"
            android:textColor="#494949"
            android:textSize="15sp"
            android:layout_marginLeft="26px"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginRight="19px"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="明明"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/title"
                android:layout_marginLeft="26px"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19px"
                android:src="@mipmap/safari_back"

                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/data_text"
android:layout_marginLeft="30px"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:text="绑定帐号"
        android:textSize="15sp"
        android:background="#f6f6f6"/>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
      android:layout_marginTop="6dp"
        android:id="@+id/data_phone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:focusable="true"
        android:focusableInTouchMode="true"

        android:background="@color/whrite">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:layout_marginLeft="29px"
            android:drawableLeft="@mipmap/phone_info"
            android:drawablePadding="17dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/person_phone"
                android:layout_marginRight="30px"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""

                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_marginLeft="26px"
                android:background="@null"
                android:inputType="number"
                />
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19px"
                android:src="@mipmap/safari_back"

                />
        </LinearLayout>

    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
        android:background="@drawable/ll_sign_select"
        android:id="@+id/bang_weix"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
       >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/weixin_info"
            android:drawablePadding="17dp"
            />

        <TextView
            android:id="@+id/info_weixin"
            android:layout_marginRight="30px"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_weight="1"

            android:layout_marginLeft="30px"
            android:background="@null"

            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:src="@mipmap/safari_back"
            />
    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
        android:background="@drawable/ll_sign_select"
        android:id="@+id/bang_qq"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
      >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:layout_marginLeft="30px"
            android:drawableLeft="@mipmap/qq_info"
            android:drawablePadding="17dp"
            />

        <TextView
            android:id="@+id/info_qq"
            android:layout_marginRight="30px"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_weight="1"

            android:layout_marginLeft="30px"
            android:background="@null"

            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:src="@mipmap/safari_back"
            />
    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <TextView
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/whrite">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="#494949"
            android:textSize="15sp"
            android:layout_marginLeft="26px"
            />
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/yzm"
                android:layout_marginRight="19px"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColorHint="@color/title"
                android:textColor="@color/title"
                android:layout_marginLeft="26px"
                android:background="@null"
                />
            <Button
                android:id="@+id/get_yzm"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_marginRight="19px"
                android:text="获取验证码"
                android:textColor="@color/lansecolor"
               android:background="@mipmap/yzm_btn"

                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="19px"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/whrite"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textColor="#494949"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginLeft="30px"
            />
        <EditText
            android:id="@+id/person_email"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="15sp"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:textColor="@color/title"
            android:layout_marginLeft="30px"
            android:background="@null"

            />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"/>


    <LinearLayout
        android:visibility="gone"
        android:background="@color/whrite"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="15sp"
            android:textColor="#494949"
            android:layout_marginLeft="26px"
            />
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#f00"
                android:layout_marginLeft="26px"
                />
            <ImageView
                android:layout_marginLeft="19px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/safari_back"
                android:layout_marginRight="26px"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29px"
        >

        <Button

            android:gravity="center"
            android:id="@+id/info_submit"
            android:layout_width="670px"
            android:layout_height="70px"
            android:background="@mipmap/longxing"
            android:layout_marginLeft="24px"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

    </LinearLayout>
</com.chenantao.autolayout.AutoLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:background="#F1F0F6"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_marginTop="10px"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:id="@+id/rc"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.RoundImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/cont_imgs"
                android:visibility="gone"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="85dp"
                android:layout_height="56dp"
                android:background="@mipmap/information_placeholder"
                android:id="@+id/cont_imgs2"
                android:visibility="gone"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:id="@+id/my_rencai"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/my_rencainame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="英特尔:"
                        android:textSize="15sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:lineSpacingExtra="14px"
                        android:textColor="@color/title_head"/>
                    <TextView
                        android:id="@+id/zhicheng"
                        android:layout_marginLeft="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电子信息"
                        android:textSize="@dimen/title"
                        android:textColor="@color/title"/>
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="15px"
                    android:layout_width="match_parent"
                    android:layout_height="316px"
                    android:background="@mipmap/datu"
                    android:id="@+id/shiyanse_imgs"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/lingyu_info"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lingyu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title"
                        android:textColor="@color/title"
                        android:text="所属领域:"/>
                    <TextView
                        android:id="@+id/my_linyu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title"
                        android:textColor="@color/title"
                        android:text="电子信息"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/xiangqing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_xianqin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/title"
                android:textColor="@color/title"
                android:layout_marginLeft="10dp"
                android:lineSpacingExtra="12px"
                android:text="据报道，英特尔位于德州奥斯卡玎（Austin）"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:gravity="right">
            <TextView
                android:visibility="visible"
                android:id="@+id/time"
                android:layout_marginLeft="10dp"
                android:textSize="22px"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/cont_imgs"
                android:text="中国青年报 两小时前"
                />

            <RelativeLayout
                android:layout_marginRight="19px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/rc_tuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tuijian"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/rc_zhiding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zhiding"/>
            </RelativeLayout>

            <TextView
                android:layout_marginLeft="15px"
                android:id="@+id/rc_look"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:drawableLeft="@mipmap/look"
                android:textSize="25px"
                android:textColor="@color/title"
                android:drawablePadding="5px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/line"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</com.chenantao.autolayout.AutoRelativeLayout>
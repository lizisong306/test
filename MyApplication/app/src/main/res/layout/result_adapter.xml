<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="42dp"
            android:background="#f6f6f6"
            android:text="   人才"
            android:drawableLeft="@mipmap/title1"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="29px"
            android:layout_marginBottom="29px"
            android:layout_marginRight="15px"
            android:visibility="visible"
            android:id="@+id/rc"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <view.RoundImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/rencai_imgs"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="56dp"
                        android:visibility="gone"
                        android:background="@mipmap/information_placeholder"
                        android:id="@+id/cont_imgs"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/my_rencai"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/my_rencainame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="英特尔:"
                            android:textSize="15sp"
                            android:maxLines="2"
                            android:lineSpacingExtra="14px"
                            android:ellipsize="marquee"
                            android:textColor="@color/title_head"/>
                        <TextView
                            android:id="@+id/zhicheng"
                            android:layout_marginLeft="15px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电子信息"
                            android:lines="1"
                            android:textSize="12sp"
                            android:textColor="@color/title"/>
                    </LinearLayout>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/shiyanse_img"
                        android:layout_marginTop="15px"
                        android:layout_width="match_parent"
                        android:layout_height="316px"
                        android:background="@mipmap/datu"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:gravity="bottom"
                        android:id="@+id/lingyu_info"
                        android:layout_marginTop="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lingyu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title"
                            android:textColor="@color/title"
                            android:text="所属领域:"/>
                        <TextView
                            android:id="@+id/my_linyu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/title"
                            android:textColor="@color/title"
                            android:lines="1"
                            android:text="电子信息"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_xianqin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textSize="@dimen/title"
                    android:ellipsize="end"
                    android:textColor="@color/title"
                    android:lineSpacingExtra="14px"
                    android:text="据报道，英特尔位于德州奥斯卡玎（Austin）"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="right">
                <TextView
                    android:visibility="visible"
                    android:id="@+id/time"
                    android:textSize="11sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/cont_imgs"
                    android:text="中国青年报 两小时前"
                    />

                <RelativeLayout
                    android:layout_marginRight="19px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/rc_tuijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tuijian"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/rc_zhiding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zhiding"/>
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="15px"
                    android:id="@+id/rc_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:drawableLeft="@mipmap/look"
                    android:textSize="11sp"
                    android:textColor="@color/title"
                    android:drawablePadding="5px"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/lines"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/more_info"
            android:layout_centerInParent="true"
            android:text="查看更多内容"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

    </RelativeLayout>


</com.chenantao.autolayout.AutoRelativeLayout>
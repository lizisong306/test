<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/head2"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:gravity="center"

        android:background="@color/whrite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:textColor="@color/title_head"
            android:textSize="@dimen/biaoti"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:text="把脉"
            android:gravity="center"
            android:paddingLeft="72px"/>
        <ImageView
            android:id="@+id/my_pulse"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/tab_pulsee"
            android:layout_marginRight="24px"

            />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hvChannel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        >
        <RadioGroup
            android:background="#F9F9F9"
            android:id="@+id/rgChannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </RadioGroup>
    </HorizontalScrollView>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpNewsdaoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v4.view.ViewPager>
</com.chenantao.autolayout.AutoLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_ra"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#F6F6F6"
    android:clipToPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:background="@color/whrite"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/sh_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/nav_sousuo"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="29px"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="1"

                >
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/search"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlSearchFrameDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:layout_weight="30"
                >
                <AutoCompleteTextView
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:popupBackground="@null"
                    style="@style/AutoCompleteStyle"
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="true"
                    android:hint=" 请输入搜索内容..."
                    android:gravity="center_vertical|left"
                    android:textSize="25px"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:completionThreshold="1"
                    android:textColorHint="#c3c3c3"
                    android:textColor="#3e3e3e"


                    />
                <ImageView android:id="@+id/ivDeleteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/search_delete"
                    android:layout_centerInParent="true"
                    android:paddingRight="10px"
                    android:visibility="gone"
                    />

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/sousuo"
            android:textColor="@color/lansecolor"
            android:layout_marginRight="29px"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/whrite"
        >
        <TextView
            android:id="@+id/tuijian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="推荐"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/zixun"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="资讯"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/zhuanjia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="专家"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/xiangmu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="项目"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/zhengce"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="政策"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/shebei"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="设备"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/zhuanli"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:text="专利"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e1e1"
        >
        <view.RefreshListView
            android:id="@+id/listview"
            style="@style/listview_style1"
            android:visibility="visible"
            addHeader="true"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none"
            />
        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/nocontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/queshengye"
            />
        <ImageView
            android:layout_width="1024dp"
            android:layout_height="5dp"
            android:background="@drawable/img"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/animation_list" />
    </RelativeLayout>
</com.chenantao.autolayout.AutoLinearLayout>
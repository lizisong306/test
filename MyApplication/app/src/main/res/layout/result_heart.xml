<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:background="@mipmap/bg_dianzixinxi"
        >
        <ImageView
            android:layout_marginTop="12dp"
            android:id="@+id/bamai_back"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_h"
         />

           <TextView
               android:id="@+id/title_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="@color/white"
               android:layout_marginTop="8dp"
               android:gravity="top"
               android:layout_centerHorizontal="true"
               android:text="XX的私人定制"
               />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_bottom"
        android:layout_width="wrap_content"
        android:layout_height="260px"
        android:layout_below="@+id/title"
        >
        <TextView
            android:id="@+id/title_lingyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:text="电子信息领域"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_black"
            />
        <TextView
            android:id="@+id/title_date"
            android:layout_below="@+id/title_lingyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="更新日期:2016-12-30"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/lansecolor"
            />
        <GridView
            android:id="@+id/herat_grid"
            android:layout_below="@+id/title_date"
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:gravity="center"
            android:layout_marginLeft="39px"
            android:layout_marginRight="39px"
            android:numColumns="4"
            android:layout_gravity="center"
            android:horizontalSpacing="24px"
            android:verticalSpacing="24px">
        </GridView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="77dp"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="2dip"
        >
        <view.RoundImageView
            android:padding="2dip"
            android:id="@+id/my_login"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/head_1"
            />
    </RelativeLayout>
</com.chenantao.autolayout.AutoRelativeLayout>
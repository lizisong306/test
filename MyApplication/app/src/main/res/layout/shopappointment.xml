<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"

                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约专家"
                android:layout_centerInParent="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/biaoti"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_above="@+id/next"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/shop_banner"
                />

            <TextView
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/title1"
                android:text="服务优势"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:gravity="center_vertical"
                android:drawablePadding="13dp"
                />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rencai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_1"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text1"
                    android:layout_toRightOf="@+id/rencai"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顶尖科技人才"
                    android:textSize="15sp"
                    android:textColor="#47556d"
                    />
                <TextView
                    android:id="@+id/txt1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rencai"
                    android:layout_below="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="汇集国内科研院所在册10万顶级科技人才"
                    android:layout_marginLeft="20dp"
                    android:textSize="11sp" />
                <TextView
                    android:layout_below="@+id/txt1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rencai1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_2"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text2"
                    android:layout_toRightOf="@+id/rencai1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精准行业匹配"
                    android:textSize="15sp"
                    android:textColor="#47556d"
                    />
                <TextView
                    android:id="@+id/txt2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rencai1"
                    android:layout_below="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="先进大数据精准匹配最合适的行业专家"
                    android:layout_marginLeft="20dp"
                    android:textSize="11sp" />
                <TextView
                    android:layout_below="@+id/txt2"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rencai3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_3"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text3"
                    android:layout_toRightOf="@+id/rencai3"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快速的沟通约见"
                    android:textSize="15sp"
                    android:textColor="#47556d"
                    />
                <TextView
                    android:id="@+id/txt3"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rencai3"
                    android:layout_below="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="快速对接科技人才,确认双方最佳约见时间"
                    android:layout_marginLeft="20dp"
                    android:textSize="11sp" />
                <TextView
                    android:layout_below="@+id/txt3"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rencai4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_4"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text4"
                    android:layout_toRightOf="@+id/rencai4"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进度的实时反馈"
                    android:textSize="15sp"
                    android:textColor="#47556d"
                    />
                <TextView
                    android:id="@+id/txt4"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rencai4"
                    android:layout_below="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="实时反馈约见进度,随时随地掌握约见信息"
                    android:layout_marginLeft="20dp"
                    android:textSize="11sp" />
                <TextView
                    android:layout_below="@+id/txt4"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rencai5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_5"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text5"
                    android:layout_toRightOf="@+id/rencai5"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科研院所约会面"
                    android:textSize="15sp"
                    android:textColor="#47556d"
                    />
                <TextView
                    android:id="@+id/txt5"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rencai5"
                    android:layout_below="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="科研院所会面,信息真实可靠,设备项目齐全"
                    android:layout_marginLeft="20dp"
                    android:textSize="11sp" />
                <TextView
                    android:layout_below="@+id/txt5"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rencai6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shop_6"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text6"
                    android:layout_toRightOf="@+id/rencai6"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一对一专属服务"
                    android:textSize="15sp"
                    android:textColor="#47556d"
                    />
                <TextView
                    android:id="@+id/txt6"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rencai6"
                    android:layout_below="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="一对一专属技术经纪人,细致个性化对接需求"
                    android:layout_marginLeft="20dp"
                    android:textSize="11sp" />
                <TextView
                    android:layout_below="@+id/txt6"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"

                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/title1"
                android:text="服务流程"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:gravity="center_vertical"
                android:drawablePadding="13dp"
                />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/liucheng"
                />

            <TextView
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/title1"
                android:text="服务内容"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:gravity="center_vertical"
                android:drawablePadding="13dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/icon_blue"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="企业技术难题咨询"
                android:textSize="15sp"
                android:textColor="#47556d"
                android:drawablePadding="10dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/icon_blue"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="先进科技前瞻解读"
                android:textSize="15sp"
                android:textColor="#47556d"
                android:drawablePadding="10dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/icon_blue"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="行业技术技能指导"
                android:textSize="15sp"
                android:textColor="#47556d"
                />

            <TextView
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/title1"
                android:text="服务价格"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:gravity="center_vertical"
                android:drawablePadding="13dp"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:layout_weight="1"
                   android:text="专家的类别"
                   android:textSize="12sp"
                   android:lines="1"
                   android:gravity="center"
                   android:background="@drawable/shap_rect"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="服务时长"
                    android:textSize="12sp"
                    android:lines="1"
                    android:gravity="center"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="收费标准"
                    android:gravity="center"
                    android:background="@drawable/shap_rect"
                    />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="院士"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="2小时"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:id="@+id/price1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="10000元"
                    android:lines="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="研究员/教授/高工"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="2小时"
                    android:textSize="12sp"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:id="@+id/price2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="4000元"
                    android:textSize="12sp"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="副研究员/副教授"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:lines="1"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="2小时"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:lines="1"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:id="@+id/price3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="1000元"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="博士/工程师"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="2小时"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />
                <TextView
                    android:id="@+id/price4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="500元"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/holo_blue_dark"
                    android:background="@drawable/shap_rect"
                    />

            </LinearLayout>
            <TextView
                android:layout_marginTop="21dp"
                android:layout_width="match_parent"
                android:text="提示：预约专家周期至少1个月。如有调整，客服会在预约后及时联系您。"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/next"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:text="预约专家"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/lansecolor"
        android:layout_height="50dp" />

</com.chenantao.autolayout.AutoRelativeLayout>
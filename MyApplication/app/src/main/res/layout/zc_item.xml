<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/whrite"
        android:layout_marginTop="6dp"

        android:id="@+id/zc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/zc_line"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <TextView

            android:id="@+id/zc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATT试用商用5G通信服务 英"
            android:textColor="@color/title_head"
            android:textSize="@dimen/biaoti1"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView

            android:id="@+id/zc_description"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dfdfdfdfdfd"
            android:textSize="@dimen/title"
            android:textColor="@color/title"
            android:maxLines="3"
            android:ellipsize="marquee"
            android:lineSpacingExtra="6dp" />

        <LinearLayout
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/zc_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属领域:"
                    android:textSize="@dimen/title"
                    android:textColor="@color/title"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15px"
                android:gravity="right">
                <ImageView
                   android:visibility="gone"
                    android:id="@+id/zc_zt"
                    android:layout_marginRight="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zhuanti_img"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/zc_dianzan"
                    android:layout_marginRight="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/zan"/>
                    <TextView
                        android:layout_marginLeft="5px"
                        android:id="@+id/zc_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:textSize="22px"
                        android:textColor="@color/title"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/zc_look"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:drawableLeft="@mipmap/look"
                    android:textSize="22px"
                    android:textColor="@color/title"
                    android:drawablePadding="5px"/>
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@mipmap/banner_top"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back_h"
        />
    <ImageView
        android:id="@+id/share"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="@mipmap/zixun_share"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@+id/banner">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数学与系统研究所"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#797fec"
            android:textSize="23sp"
            />
        <TextView
            android:id="@+id/description"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#4d4d4d"
            android:textSize="14sp"
            android:lineSpacingExtra="22px"
            android:text="中国科学院数学与系统科学研究院成立于1998年12月，是由中科院数学研究所(建于1952年)、应用数学研究所(建于1979年)、系统科学研究所(建于1979年)及计算数学与科学工程计算研究所(建于1995年)等四个研究所整合而成。
        目前韶能股份在运营的生物质能发电企业有两家，分别是全资子公司韶关市日昇生物质发电有限公司及新丰旭能生物质发电有限公司。两家生物质能发电企业各装机6万千瓦，总装机12万千瓦，分别于2014年7月初、2017年3月下旬投入商业运行。目前，两家企业的发电机组稳定运行，燃料供应充足，是公司新的利润增长点。2017年上半年，韶能股份生物质能发电企业共实现营业收入2.26亿元，利润总额5349万元"
            />
        <TextView
            android:id="@+id/jigoudescription"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#797fec"
            android:layout_alignParentRight="true"
            android:text="机构详情 >>"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/jigoutype"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/banner"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:text="研究机构"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#778aff"
        />

</com.chenantao.autolayout.AutoRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <LinearLayout

        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/xinqu_back"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="返回"
               android:layout_marginLeft="24px"
               android:textColor="#c1c1c1"/>
           <TextView
               android:layout_weight="20"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""/>
           <TextView
               android:visibility="gone"
              android:layout_weight="1"
               android:id="@+id/tiaoguo"
               android:gravity="right"
               android:text="跳过"
               android:textSize="33px"
              android:layout_marginRight="24px"
               android:textColor="#c1c1c1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              />
       </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您对那些领域感兴趣?"
            android:textColor="#00aced"
            android:textSize="32px"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:textSize="28px"
            android:gravity="center"
            android:text="选择想看到的信息"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"
        />
      <ScrollView

          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >

              <RelativeLayout
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="25dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/dianzixinxi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/dianzixingqu"
                      />
                  <TextView
                      android:layout_toRightOf="@+id/dianzixinxi"
                      android:layout_marginLeft="25dp"
                      android:id="@+id/shengwujishu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/shengwuxingqu"
                      />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="25dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="25dp"
                      android:id="@+id/xianjinzhizao"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/xianjinxingqu"
                      />
                  <TextView
                      android:layout_toLeftOf="@+id/xianjinzhizao"
                      android:id="@+id/jienenghuanbao"
                      android:layout_marginRight="25dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/jienengxingqu"
                      />

              </RelativeLayout>
              <RelativeLayout
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="25dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/xinnengyuan"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/xinnengyuanxingqu"
                      />
                  <TextView
                      android:layout_toRightOf="@+id/xinnengyuan"
                      android:layout_marginLeft="25dp"
                      android:id="@+id/huaxuehuagong"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/huaxuexingqu"
                      />
              </RelativeLayout>
              <RelativeLayout
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="25dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="25dp"
                      android:id="@+id/xincailiao"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/xincailiaoxingqu"
                      />
                  <TextView
                      android:layout_toLeftOf="@+id/xincailiao"
                      android:id="@+id/wenhuachuanyi"
                      android:layout_marginRight="25dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/wenhuaxingqu"
                      />

              </RelativeLayout>
              <RelativeLayout
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="25dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


                  <TextView
                      android:layout_centerInParent="true"
                      android:id="@+id/qita"
                      android:layout_marginRight="25dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/qitaxingqu"
                      />

              </RelativeLayout>


          </LinearLayout>
      </ScrollView>

    <TextView
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/lines"
        />

   <LinearLayout
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="150px"
      >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="选好了，保存"
           android:textSize="28px"
           android:textColor="#00aced"
          android:drawablePadding="10px"
           android:drawableRight="@mipmap/arrowxingqu"
           android:id="@+id/save"
           />
   </LinearLayout>


</com.chenantao.autolayout.AutoLinearLayout>

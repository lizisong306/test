<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/updgrate_heard"
            />
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_alignRight="@+id/layout"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/updgrate_close"
                android:id="@+id/close" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/updgrate_zhongjian"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发现新版本,6.2.7来了"
                android:textColor="#323232"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="8dp"

                />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="11sp"
                android:textColor="#262626"
                android:text="界面改版更加清新"
                android:drawableLeft="@mipmap/shijianzhou"
                android:drawablePadding="5dp"
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="11sp"
                android:textColor="#262626"
                android:text="界面改版更加清新"
                android:drawableLeft="@mipmap/shijianzhou"
                android:drawablePadding="5dp"
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="11sp"
                android:textColor="#262626"
                android:text="界面改版更加清新"
                android:drawableLeft="@mipmap/shijianzhou"
                android:drawablePadding="5dp"
                android:id="@+id/content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="11sp"
                android:textColor="#262626"
                android:text="界面改版更加清新"
                android:drawableLeft="@mipmap/shijianzhou"
                android:drawablePadding="5dp"
                android:id="@+id/content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textSize="11sp"
                android:textColor="#262626"
                android:text="界面改版更加清新"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/shijianzhou"
                android:id="@+id/content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/lijigengxin"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lijigengxin"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/updgrate_end"
            />

    </LinearLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:background="@mipmap/tips_bg">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="支付方式"
           android:textColor="@color/white"
           android:textSize="18sp"
           android:gravity="center"
           android:background="@mipmap/tou"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:background="@color/white"
            android:id="@+id/zhifubaocall"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/zhifubaozhifu"
                />
              <TextView
                  android:layout_marginLeft="10dp"
                  android:layout_width="80dp"
                  android:layout_height="wrap_content"
                  android:textColor="#181818"
                  android:text="支付宝支付"
                  android:textSize="15sp"
                  />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:background="@color/white"
            android:visibility="visible"
            android:id="@+id/weixinzhifu"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/weixinzhifu"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:text="微信支付"
                android:textSize="15sp"
                />
        </LinearLayout>
        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/lines"
            />
        <TextView
            android:id="@+id/cencel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/wei"
            android:textColor="@color/text_gray"
            android:textSize="18sp"
            android:gravity="center"
            android:text="取消"
            />
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/animation_list" />
</com.chenantao.autolayout.AutoRelativeLayout>